<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    　　　<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    　　　　　 <encoder>
    　　　　　　　　　<pattern>%d %-5level [%thread{5}] %logger{5} - %msg %n</pattern>
    　　　　　 </encoder>
    　　　</appender>

    　　　<root level="INFO">
    　　　　　　<appender-ref ref="STDOUT" />
    　　　</root>
</configuration>